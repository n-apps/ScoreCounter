<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ua.com.napps.scorekeeper">

  <application
      android:name="ua.napps.scorekeeper.app.ScoreKeeperApp"
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:theme="@style/AppTheme"
      android:windowSoftInputMode="adjustNothing|stateAlwaysHidden">
    <activity
        android:name="ua.napps.scorekeeper.counters.CountersActivity"
        android:label="@string/app_name">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
        android:name="ua.napps.scorekeeper.counters.EditCounterActivity"
        android:parentActivityName="ua.napps.scorekeeper.counters.CountersActivity">
    </activity>
  </application>

</manifest>