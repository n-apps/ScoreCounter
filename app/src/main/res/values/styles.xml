<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColor</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:navigationBarColor">@color/primaryColor</item>
        <item name="android:colorEdgeEffect">@color/accentColor</item>
        <item name="myIconTint">?attr/colorControlNormal</item>
        <item name="myDividerColor">@color/black_12</item>
        <item name="myEmptyStateBackground">@color/primaryColor</item>
        <item name="myDiceColor">?attr/colorPrimary</item>
    </style>

    <style name="ToolBarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
        <item name="theme">@style/AppTheme.AppBarOverlay</item>
        <item name="titleTextAppearance">@style/MyToolbarTextAppearance</item>
    </style>

    <style name="AppBarStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/primaryColor</item>
        <item name="theme">@style/AppTheme.AppBarOverlay</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="MyToolbarTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SingleLineStyle">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">@dimen/list_single_line_min_height</item>
        <item name="android:paddingStart">@dimen/padding_normal</item>
        <item name="android:paddingEnd">@dimen/padding_normal</item>
    </style>

    <style name="TwoLinesStyle">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">@dimen/list_two_lines_min_height</item>
        <item name="android:paddingEnd">@dimen/padding_normal</item>
    </style>

    <style name="SwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:minHeight">@dimen/list_two_lines_min_height</item>
        <item name="android:paddingEnd">@dimen/padding_normal</item>
        <item name="android:textSize">@dimen/font_subheading</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="EmptyStateMessage" parent="TextAppearance.AppCompat.Medium">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:paddingBottom">@dimen/padding_normal</item>
        <item name="android:fontFamily">@font/work_sans_light</item>
        <item name="android:maxWidth">@dimen/empty_state_max_width</item>
        <item name="android:paddingTop">@dimen/padding_normal</item>
        <item name="android:textSize">@dimen/font_body</item>
    </style>

    <style name="MiniDiceStyle">
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/spacing_micro</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:fontFamily">@font/work_sans_semibold</item>
        <item name="autoSizeMaxTextSize">24sp</item>
        <item name="autoSizeMinTextSize">12sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <!--Input field style-->
    <style name="LightEditText" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="MyHintText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/textColorPrimaryInverse</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="HintTextLight" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/textColorPrimaryInverse</item>
    </style>

    <style name="HintTextDark" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

</resources>
