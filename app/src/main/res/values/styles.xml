<resources>

    <style name="ScoreCounter" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>
        <item name="colorSurface">@color/primaryBackground</item>
        <item name="rippleColor">@color/rippleColor</item>
        <item name="itemRippleColor">@color/rippleColor</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:windowBackground">@color/primaryBackground</item>
        <item name="android:colorEdgeEffect">@color/primaryBackground</item>
        <item name="android:statusBarColor">@color/primaryBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/fade</item>
        <item name="android:windowExitTransition">@android:transition/fade</item>
        <item name="android:windowReenterTransition">@android:transition/fade</item>
        <item name="android:forceDarkAllowed">false</item>

        <item name="materialButtonStyle">@style/MyButton</item>
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
        <item name="materialButtonOutlinedStyle">@style/MaterialButtonOutlinedStyle</item>

        <item name="md_content_color">@color/textColorPrimary</item>
        <item name="md_widget_color">@color/colorPrimary</item>
        <item name="md_negative_color">@color/colorPrimary</item>
        <item name="md_positive_color">@color/colorPrimary</item>
        <item name="md_neutral_color">@color/colorSecondary</item>
        <item name="md_btn_ripple_color">@color/rippleColor</item>
    </style>

    <style name="ToolBarStyle" parent="@style/Widget.MaterialComponents.Toolbar.Surface">
        <item name="theme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/TextAppearance.App.Toolbar.Title</item>
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
    </style>

    <style name="TextAppearance.App.Toolbar.Title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/o600</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:letterSpacing">-0.05</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents" />

    <style name="TwoLinesStyle">
        <item name="android:foreground">@drawable/ripple</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">@dimen/list_two_lines_min_height</item>
        <item name="android:paddingStart">@dimen/padding_large</item>
        <item name="android:paddingEnd">@dimen/padding_large</item>
    </style>

    <style name="EmptyStateMessage" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="fontFamily">@font/o400</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="MiniDiceStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/mono</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="autoSizeMaxTextSize">28sp</item>
        <item name="autoSizeMinTextSize">14sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="MyButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="fontFamily">@font/o600</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="MyTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/o400</item>
    </style>

    <style name="MaterialButtonOutlinedStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">?colorPrimary</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:padding">@dimen/padding_normal</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="backgroundTint">@color/outline_button_selector</item>
        <item name="rippleColor">@color/rippleColor</item>
        <item name="android:textSize">@dimen/font_subheading</item>
    </style>

    <style name="SettingsSectionHeader">
        <item name="android:fontFamily">@font/o600</item>
        <item name="android:textAppearance">@style/EmptyStateMessage</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingHorizontal">@dimen/padding_large</item>
        <item name="android:paddingTop">@dimen/padding_large</item>
        <item name="android:minHeight">@dimen/list_two_lines_min_height</item>
    </style>

    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="DiceButtonOutlinedStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">?colorSecondary</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:fontFamily">@font/mono</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:padding">@dimen/padding_normal</item>
        <item name="android:textColor">?colorSecondary</item>
        <item name="backgroundTint">@color/outline_button_selector</item>
        <item name="rippleColor">@color/rippleColor</item>
    </style>
</resources>
