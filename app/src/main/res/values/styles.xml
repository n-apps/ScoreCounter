<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColor</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="android:windowBackground">@color/primaryBackground</item>
        <item name="android:colorEdgeEffect">@color/primaryBackground</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="myIconTint">?attr/colorControlNormal</item>
        <item name="myDividerColor">@color/black_12</item>
        <item name="myDiceColor">#424254</item>
        <item name="superBottomSheet_backgroundColor">@color/white</item>
        <item name="materialButtonStyle">@style/MyButton</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="buttonBarButtonStyle">@style/ButtonBarTheme</item>
    </style>

    <style name="ButtonBarTheme" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/accentColor</item>
    </style>

    <style name="ToolBarStyle">
        <item name="theme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:background">?colorPrimary</item>
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
    </style>

    <style name="AppBarStyle" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:background">@color/primaryBackground</item>
        <item name="theme">@style/AppTheme.AppBarOverlay</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents" />

    <style name="TwoLinesStyle">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">@dimen/list_two_lines_min_height</item>
        <item name="android:paddingEnd">@dimen/padding_normal</item>
    </style>

    <style name="SwitchStyle" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:paddingEnd">@dimen/padding_normal</item>
        <item name="android:textSize">@dimen/font_subheading</item>
        <item name="colorControlActivated">@color/accentColor</item>
    </style>

    <style name="EmptyStateMessage" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:paddingBottom">@dimen/padding_normal</item>
        <item name="android:maxWidth">@dimen/empty_state_max_width</item>
        <item name="android:textColor">?android:attr/textColorHint</item>
        <item name="android:paddingTop">@dimen/padding_normal</item>
        <item name="android:textSize">@dimen/font_subheading</item>
    </style>

    <style name="MiniDiceStyle">
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/spacing_micro</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="autoSizeMaxTextSize">@dimen/font_display</item>
        <item name="autoSizeMinTextSize">@dimen/font_body</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="EditCounterTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/text_input_layout</item>
    </style>

    <style name="MyButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">?attr/colorAccent</item>
    </style>

</resources>
