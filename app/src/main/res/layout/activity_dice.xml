<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="ua.napps.scorekeeper.dice.DiceActivity"
    tools:openDrawer="end">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_previous_result"
            style="@style/EmptyStateMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:text="@string/dice_empty_state" />

        <ImageView
            android:id="@+id/dice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:contentDescription="@string/menu_dice"
            android:padding="@dimen/dice_padding"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/avd_dice_empty" />

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="@dimen/back_button_size"
            android:layout_height="@dimen/back_button_size"
            android:alpha="0.84"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@string/common_back"
            android:padding="@dimen/back_button_padding"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_arrow_back" />

        <ImageButton
            android:id="@+id/btn_switch_theme"
            android:layout_width="@dimen/back_button_size"
            android:layout_height="@dimen/back_button_size"
            android:layout_gravity="right"
            android:alpha="0.84"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@string/change_theme"
            android:padding="@dimen/back_button_padding"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_settings" />
    </FrameLayout>

    <!--Drawer content-->

    <LinearLayout
        android:id="@+id/drawer_content"
        android:layout_width="@dimen/drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="?android:windowBackground"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:padding="@dimen/spacing_normal"
            android:text="Dice type"
            android:textColor="@color/accentColor" />

        <FrameLayout
            android:id="@+id/six_sides"
            style="@style/TwoLinesStyle"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/button_icon_size"
                android:layout_height="@dimen/button_icon_size"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/dice_six" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_large"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/padding_normal"
                android:layout_marginRight="@dimen/padding_large"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/font_subheading"
                android:includeFontPadding="false"
                android:text="Six sides" />

            <ImageView
                android:id="@+id/six_sides_checkmark"
                android:layout_width="@dimen/button_icon_size"
                android:layout_height="@dimen/button_icon_size"
                android:layout_gravity="center_vertical|end"
                app:srcCompat="@drawable/ic_check" />
        </FrameLayout>

        <include layout="@layout/divider" />

        <FrameLayout
            android:id="@+id/eight_sides"
            style="@style/TwoLinesStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/button_icon_size"
                android:layout_height="@dimen/button_icon_size"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/dice_digital_6" />

            <TextView
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/padding_large"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/padding_large"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_normal"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/font_subheading"
                android:includeFontPadding="false"
                android:text="Eight sides" />

            <ImageView
                android:id="@+id/eight_sides_checkmark"
                android:layout_width="@dimen/button_icon_size"
                android:layout_height="@dimen/button_icon_size"
                android:visibility="invisible"
                android:layout_gravity="center_vertical|end"
                app:srcCompat="@drawable/ic_check" />
        </FrameLayout>

        <include layout="@layout/divider" />

        <FrameLayout
            android:id="@+id/twelve_sides"
            style="@style/TwoLinesStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/button_icon_size"
                android:layout_height="@dimen/button_icon_size"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/dice_digital_6" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_large"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/padding_large"
                android:padding="@dimen/padding_normal"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/font_subheading"
                android:includeFontPadding="false"
                android:text="Twelve sides" />

            <ImageView
                android:id="@+id/twelve_sides_checkmark"
                android:layout_width="@dimen/button_icon_size"
                android:layout_height="@dimen/button_icon_size"
                android:layout_gravity="center_vertical|end"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_check" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:padding="@dimen/spacing_normal"
            android:text="Appearance"
            android:textColor="@color/accentColor" />

        <FrameLayout
            android:id="@+id/dark_theme"
            style="@style/TwoLinesStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:paddingRight="0dp">

            <ImageView
                android:layout_width="@dimen/button_icon_size"
                android:layout_height="@dimen/button_icon_size"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_change_theme" />

            <android.support.v7.widget.SwitchCompat
                style="@style/SwitchStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_large"
                android:includeFontPadding="false"
                android:text="Dark theme" />

        </FrameLayout>

        <include layout="@layout/divider" />

        <FrameLayout
            android:id="@+id/shake_to_roll"
            style="@style/TwoLinesStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:paddingRight="0dp">

            <ImageView
                android:layout_width="@dimen/button_icon_size"
                android:layout_height="@dimen/button_icon_size"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_compare_arrows" />

            <android.support.v7.widget.SwitchCompat
                style="@style/SwitchStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_large"
                android:includeFontPadding="false"
                android:text="Shake to roll" />

        </FrameLayout>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>