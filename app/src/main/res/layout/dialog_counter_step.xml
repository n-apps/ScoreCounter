<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorSurface"
    android:paddingBottom="@dimen/spacing_large"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:id="@+id/counter_info_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="@dimen/list_single_line_min_height"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/padding_large"
        android:paddingVertical="@dimen/padding_normal"
        app:layout_constraintBottom_toTopOf="@id/buttons_row"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:background="#F2B04B">

        <TextView
            android:id="@+id/counter_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/o600"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:paddingEnd="@dimen/padding_normal"
            android:text="Jessica — Jessica"
            app:autoSizeMaxTextSize="@dimen/font_display"
            app:autoSizeMinTextSize="@dimen/font_body"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform"

            tools:textColor="?attr/colorOnSurface" />

        <TextView
            android:id="@+id/counter_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/azm"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textAppearance="?attr/textAppearanceHeadline4"
            android:textColor="?android:attr/textColorPrimary"
            tools:text="435" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/spacing_big"
        android:layout_marginTop="@dimen/spacing_xlarge"
        android:baselineAligned="false"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/counter_info_header">

        <ua.napps.scorekeeper.utils.SquareFrameLayout
            android:id="@+id/btn_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/spacing_normal"
            android:layout_weight="1"
            android:background="@drawable/bg_selector_mini_dice_toggle"
            android:padding="@dimen/spacing_micro">

            <TextView
                android:id="@+id/btn_one_text"
                style="@style/MiniDiceStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:text="+5"
                tools:textSize="18sp" />
        </ua.napps.scorekeeper.utils.SquareFrameLayout>

        <ua.napps.scorekeeper.utils.SquareFrameLayout
            android:id="@+id/btn_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/spacing_normal"
            android:layout_marginEnd="@dimen/spacing_normal"
            android:layout_weight="1"
            android:background="@drawable/bg_selector_mini_dice_toggle"
            android:padding="@dimen/spacing_micro">

            <TextView
                android:id="@+id/btn_two_text"
                style="@style/MiniDiceStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:text="+10"
                tools:textSize="18sp" />
        </ua.napps.scorekeeper.utils.SquareFrameLayout>

        <ua.napps.scorekeeper.utils.SquareFrameLayout
            android:id="@+id/btn_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/spacing_normal"
            android:layout_marginEnd="@dimen/spacing_normal"
            android:layout_weight="1"
            android:background="@drawable/bg_selector_mini_dice_toggle"
            android:padding="@dimen/spacing_micro">

            <TextView
                android:id="@+id/btn_three_text"
                style="@style/MiniDiceStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:text="+150"
                tools:textSize="18sp" />
        </ua.napps.scorekeeper.utils.SquareFrameLayout>

        <ua.napps.scorekeeper.utils.SquareFrameLayout
            android:id="@+id/btn_four"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/spacing_normal"
            android:layout_weight="1"
            android:background="@drawable/bg_selector_mini_dice_toggle"
            android:padding="@dimen/spacing_micro">

            <TextView
                android:id="@+id/btn_four_text"
                style="@style/MiniDiceStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:text="+30"
                tools:textSize="18sp" />
        </ua.napps.scorekeeper.utils.SquareFrameLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/spacing_normal"
        android:gravity="center_horizontal"
        android:text="@string/dialog_predefined_steps"
        android:textAppearance="?attr/textAppearanceCaption"
        app:layout_constraintEnd_toEndOf="@id/buttons_row"
        app:layout_constraintStart_toStartOf="@id/buttons_row"
        app:layout_constraintTop_toBottomOf="@id/buttons_row" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/group_sign_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="@dimen/spacing_big"
        app:layout_constraintBottom_toBottomOf="@id/til_custom_step"
        app:layout_constraintEnd_toStartOf="@id/til_custom_step"
        app:layout_constraintStart_toStartOf="@id/buttons_row"
        app:layout_constraintTop_toTopOf="@id/til_custom_step"
        app:selectionRequired="true"
        app:singleSelection="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_dec"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/btn_text_btn_bg_color_selector"
            android:gravity="center"
            android:includeFontPadding="false"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="–"
            android:textAppearance="?attr/textAppearanceHeadline4"
            android:textColor="?android:attr/textColorPrimary"
            app:cornerRadius="24dp"
            app:rippleColor="@color/colorSecondary"
            tools:ignore="HardcodedText" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/btn_text_btn_bg_color_selector"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="+"
            android:textAppearance="?attr/textAppearanceHeadline4"
            android:textColor="?android:textColorPrimary"
            app:cornerRadius="24dp"
            app:rippleColor="@color/colorSecondary"
            tools:ignore="HardcodedText" />
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_custom_step"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xlarge"
        android:theme="@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined"
        app:boxCornerRadiusBottomEnd="@dimen/material_button_full_round_corner_radius"
        app:boxCornerRadiusBottomStart="@dimen/material_button_full_round_corner_radius"
        app:boxCornerRadiusTopEnd="@dimen/material_button_full_round_corner_radius"
        android:hint="@string/simple_edit_value_hint"
        app:boxCornerRadiusTopStart="@dimen/material_button_full_round_corner_radius"
        app:hintEnabled="true"
        app:hintTextColor="@color/colorSecondary"
        app:hintTextAppearance="?attr/textAppearanceCaption"
        app:boxStrokeColor="@color/colorSecondary"
        app:layout_constraintEnd_toEndOf="@id/buttons_row"
        app:layout_constraintStart_toEndOf="@id/group_sign_btn"
        app:layout_constraintTop_toBottomOf="@id/tv_hint">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_add_custom_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="1234567890"
            android:fontFamily="@font/azm"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:includeFontPadding="false"
            android:inputType="numberSigned"
            android:maxLength="9"
            android:textAppearance="?attr/textAppearanceHeadline4"
            tools:text="56"
            tools:focusedByDefault="true"
            tools:cursorVisible="true"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"/>
    </com.google.android.material.textfield.TextInputLayout>
</androidx.constraintlayout.widget.ConstraintLayout>