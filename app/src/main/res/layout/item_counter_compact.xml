<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    style="@style/Widget.MaterialComponents.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/padding_normal"
    android:layout_marginTop="@dimen/spacing_micro"
    android:layout_marginEnd="@dimen/padding_normal"
    android:layout_marginBottom="@dimen/spacing_micro"
    app:cardCornerRadius="4dp"
    app:cardElevation="1dp"
    tools:backgroundTint="#3AA99F">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="@dimen/list_two_lines_min_height"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_counter_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/o600"
            android:foreground="@drawable/ripple"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:paddingStart="@dimen/padding_normal"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            app:autoSizeMaxTextSize="@dimen/font_title"
            app:autoSizeMinTextSize="8sp"
            app:autoSizeStepGranularity="1sp"
            app:autoSizeTextType="uniform"
            tools:text="гвинтики"
            tools:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/iv_decrease"
            android:layout_width="@dimen/list_two_lines_min_height"
            android:layout_height="@dimen/list_two_lines_min_height"
            android:layout_gravity="start|center_vertical"
            android:alpha="0.54"
            android:contentDescription="@string/common_increase"
            android:foreground="@drawable/ripple"
            android:scaleType="center"
            android:src="@drawable/ic_minus"
            tools:tint="@color/primary_text_default_material_dark" />

        <TextView
            android:id="@+id/tv_counter_value"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/azm"
            android:foreground="@drawable/ripple"
            android:includeFontPadding="false"
            android:gravity="center"
            android:lines="1"
            android:minEms="2"
            android:textAppearance="?attr/textAppearanceHeadline4"
            android:textColor="?android:attr/textColorPrimary"
            app:autoSizeMaxTextSize="34sp"
            app:autoSizeMinTextSize="@dimen/counter_min_text_size"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            tools:text="24"
            tools:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/iv_increase"
            android:layout_width="@dimen/list_two_lines_min_height"
            android:layout_height="@dimen/list_two_lines_min_height"
            android:layout_gravity="end|center_vertical"
            android:alpha="0.54"
            android:contentDescription="@string/common_decrease"
            android:foreground="@drawable/ripple"
            android:scaleType="center"
            android:src="@drawable/ic_plus"
            tools:tint="@color/primary_text_default_material_dark" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>