<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="ua.napps.scorekeeper.settings.SettingsFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_normal"
        android:padding="@dimen/spacing_normal"
        android:text="General"
        android:textColor="@color/accentColor" />

    <FrameLayout
        style="@style/TwoLinesStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:paddingLeft="0dp"
        android:paddingRight="0dp">

        <ImageView
            android:layout_width="@dimen/button_icon_size"
            android:layout_height="@dimen/button_icon_size"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/padding_normal"
            app:srcCompat="@drawable/ic_change_theme" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/sw_stay_awake"
            style="@style/SwitchStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:paddingLeft="56dp"
            android:text="@string/settings_stay_awake" />
    </FrameLayout>

    <include layout="@layout/divider" />

    <!--Drawer content-->

    <LinearLayout
        android:id="@+id/drawer_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="?android:windowBackground"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:padding="@dimen/spacing_normal"
            android:text="Dice"
            android:textColor="@color/accentColor" />

        <LinearLayout
            style="@style/TwoLinesStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/button_icon_size"
                android:layout_height="@dimen/button_icon_size"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/dice_digital_6" />

            <ImageView
                android:layout_width="@dimen/button_icon_size"
                android:layout_height="@dimen/button_icon_size"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/dice_digital_8" />


            <ImageView
                android:layout_width="@dimen/button_icon_size"
                android:layout_height="@dimen/button_icon_size"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/dice_digital_20" />
        </LinearLayout>

        <FrameLayout
            style="@style/TwoLinesStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:paddingLeft="0dp"
            android:paddingRight="0dp">

            <ImageView
                android:layout_width="@dimen/button_icon_size"
                android:layout_height="@dimen/button_icon_size"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/padding_normal"
                app:srcCompat="@drawable/ic_compare_arrows" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/sw_shake_roll"
                style="@style/SwitchStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:paddingLeft="56dp"
                android:text="@string/dice_drawer_shake_to_roll"
                android:textColor="?myIconTint" />

        </FrameLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_normal"
        android:padding="@dimen/spacing_normal"
        android:text="Contact developer"
        android:textColor="@color/accentColor" />

    <FrameLayout
        android:id="@+id/send_feedback"
        style="@style/TwoLinesStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:paddingLeft="0dp"
        android:paddingRight="0dp">

        <ImageView
            android:layout_width="@dimen/button_icon_size"
            android:layout_height="@dimen/button_icon_size"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/padding_normal"
            app:srcCompat="@drawable/ic_lightbulb_outline" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:foreground="?attr/selectableItemBackground"
            android:includeFontPadding="false"
            android:paddingLeft="56dp"
            android:text="@string/settings_send_feedback"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/font_subheading" />
    </FrameLayout>

    <include layout="@layout/divider" />

    <FrameLayout
        android:id="@+id/request_feature"
        style="@style/TwoLinesStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:paddingLeft="0dp"
        android:paddingRight="0dp">

        <ImageView
            android:layout_width="@dimen/button_icon_size"
            android:layout_height="@dimen/button_icon_size"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/padding_normal"
            app:srcCompat="@drawable/ic_sentiment_dissatisfied" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:foreground="?attr/selectableItemBackground"
            android:includeFontPadding="false"
            android:paddingLeft="56dp"
            android:text="I have a problem"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/font_subheading" />
    </FrameLayout>
</LinearLayout>