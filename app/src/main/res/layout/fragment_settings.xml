<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="ua.napps.scorekeeper.settings.SettingsFragment">

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/sw_stay_awake"
        style="@style/SwitchStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/settings_stay_awake" />

    <include layout="@layout/divider" />

    <LinearLayout
        android:id="@+id/send_feedback"
        style="@style/TwoLinesStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UseCompoundDrawables">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/settings_send_feedback"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/font_subheading" />

        <ImageView
            android:layout_width="@dimen/button_icon_size"
            android:layout_height="@dimen/button_icon_size"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/spacing_normal"
            app:srcCompat="@drawable/ic_mail_outline" />

        <Space
            android:layout_width="@dimen/spacing_micro"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <!--Drawer content-->

    <LinearLayout
        android:id="@+id/drawer_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="?android:windowBackground"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:padding="@dimen/spacing_normal"
            android:text="@string/dice_drawer_variant"
            android:textColor="@color/accentColor" />

        <FrameLayout
            android:id="@+id/six_sides"
            style="@style/TwoLinesStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="@dimen/button_icon_size"
                android:layout_height="@dimen/button_icon_size"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/dice_digital_6" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/padding_large"
                android:layout_marginRight="@dimen/padding_large"
                android:includeFontPadding="false"
                android:padding="@dimen/padding_normal"
                android:text="@string/dice_six_sides_title"
                android:textColor="?myIconTint"
                android:textSize="@dimen/font_subheading" />

            <ImageView
                android:id="@+id/six_sides_checkmark"
                android:layout_width="@dimen/button_icon_size"
                android:layout_height="@dimen/button_icon_size"
                android:layout_gravity="center_vertical|end"
                android:tint="?myIconTint"
                app:srcCompat="@drawable/ic_check" />
        </FrameLayout>

        <include layout="@layout/divider" />

        <FrameLayout
            android:id="@+id/eight_sides"
            style="@style/TwoLinesStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/button_icon_size"
                android:layout_height="@dimen/button_icon_size"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/dice_digital_8" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/padding_large"
                android:layout_marginRight="@dimen/padding_large"
                android:includeFontPadding="false"
                android:padding="@dimen/padding_normal"
                android:text="@string/dice_eight_sides_title"
                android:textColor="?myIconTint"
                android:textSize="@dimen/font_subheading" />

            <ImageView
                android:id="@+id/eight_sides_checkmark"
                android:layout_width="@dimen/button_icon_size"
                android:layout_height="@dimen/button_icon_size"
                android:layout_gravity="center_vertical|end"
                android:tint="?myIconTint"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_check" />
        </FrameLayout>

        <include layout="@layout/divider" />

        <FrameLayout
            android:id="@+id/twelve_sides"
            style="@style/TwoLinesStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/button_icon_size"
                android:layout_height="@dimen/button_icon_size"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/dice_digital_20" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/padding_large"
                android:layout_marginRight="@dimen/padding_large"
                android:includeFontPadding="false"
                android:padding="@dimen/padding_normal"
                android:text="@string/dice_twelve_sides_title"
                android:textColor="?myIconTint"
                android:textSize="@dimen/font_subheading" />

            <ImageView
                android:id="@+id/twelve_sides_checkmark"
                android:layout_width="@dimen/button_icon_size"
                android:layout_height="@dimen/button_icon_size"
                android:layout_gravity="center_vertical|end"
                android:tint="?myIconTint"
                android:visibility="invisible"
                app:srcCompat="@drawable/ic_check" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:padding="@dimen/spacing_normal"
            android:text="@string/dice_drawer_appearance"
            android:textColor="@color/accentColor" />

        <FrameLayout
            style="@style/TwoLinesStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:paddingLeft="0dp"
            android:paddingRight="0dp">

            <ImageView
                android:layout_width="@dimen/button_icon_size"
                android:layout_height="@dimen/button_icon_size"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/padding_normal"
                app:srcCompat="@drawable/ic_change_theme" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/sw_dark_theme"
                style="@style/SwitchStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:paddingLeft="56dp"
                android:text="@string/dice_drawer_dark_theme"
                android:textColor="?myIconTint" />

        </FrameLayout>

        <include layout="@layout/divider" />

        <FrameLayout
            style="@style/TwoLinesStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:paddingLeft="0dp"
            android:paddingRight="0dp">

            <ImageView
                android:layout_width="@dimen/button_icon_size"
                android:layout_height="@dimen/button_icon_size"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/padding_normal"
                app:srcCompat="@drawable/ic_compare_arrows" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/sw_shake_roll"
                style="@style/SwitchStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:paddingLeft="56dp"
                android:text="@string/dice_drawer_shake_to_roll"
                android:textColor="?myIconTint" />

        </FrameLayout>
    </LinearLayout>
</LinearLayout>