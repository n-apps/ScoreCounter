<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
  <data>
    <variable
        name="items"
        type="android.databinding.ObservableArrayList&lt;ua.napps.scorekeeper.counters.Counter&gt;"
        />
    <variable
        name="callback"
        type="ua.napps.scorekeeper.counters.CounterActionCallback"
        />
  </data>
  <android.support.design.widget.CoordinatorLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
      <android.support.v7.widget.Toolbar
          android:id="@+id/toolbar"
          android:layout_width="match_parent"
          android:layout_height="?attr/actionBarSize"
          android:theme="@style/MyToolbar"
          app:title="@string/app_name"
          />
    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorPrimary"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        bind:callback="@{callback}"
        bind:items="@{items}"
        tools:listitem="@layout/item_counter"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="?attr/colorPrimary"
        android:onClick="@{()->callback.onAddCounterClick()}"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        bind:visibleGone="@{items.isEmpty()}"
        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:drawablePadding="16dp"
          android:drawableTop="@{@drawable/ic_empty_state_add_grey}"
          android:gravity="center_horizontal"
          android:lineSpacingExtra="8dp"
          android:padding="24dp"
          android:text="Tap anywhere to add first counter or use + button in the top-right corner"
          android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
          />

    </FrameLayout>

  </android.support.design.widget.CoordinatorLayout>
</layout>