<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintAnimationEnabled="false">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_counter_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:fontFamily="@font/open_sans_semibold"
                android:hint="Counter name"
                android:inputType="textCapWords"
                android:maxLength="20"
                android:maxLines="1"
                android:minEms="20" />
        </android.support.design.widget.TextInputLayout>
    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/tv_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/counter_dialog_value"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/et_counter_value"
        app:layout_constraintTop_toBottomOf="@id/app_bar" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/et_counter_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:gravity="right"
        android:inputType="number|numberSigned"
        android:maxLines="1"
        android:minEms="3"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_value"
        app:layout_constraintLeft_toRightOf="@id/tv_value"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_default"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/counter_dialog_default_value"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintLeft_toLeftOf="@id/tv_value"
        app:layout_constraintTop_toBottomOf="@id/tv_value" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/et_counter_default_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:gravity="right"
        android:inputType="number|numberSigned"
        android:maxLines="1"
        android:minEms="3"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_default"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_step"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/counter_dialog_step"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintLeft_toLeftOf="@id/tv_default"
        app:layout_constraintTop_toBottomOf="@id/tv_default" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/et_counter_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:gravity="right"
        android:inputType="number|numberSigned"
        android:maxLines="1"
        android:minEms="3"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_step"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_color"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Color"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="@+id/color"
        app:layout_constraintLeft_toLeftOf="@id/tv_step"
        app:layout_constraintTop_toTopOf="@+id/color" />

    <FrameLayout
        android:id="@+id/color"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:onClick="onColorPickerClick"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_counter_step">

        <com.afollestad.materialdialogs.color.CircleView
            android:id="@+id/color_preview"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center" />
    </FrameLayout>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/accentColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_color"
        app:layout_constraintVertical_bias="0.85">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@drawable/ic_delete_forever_white" />

            <Space
                android:layout_width="8dp"
                android:layout_height="0px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete counter"
                android:textAllCaps="true"
                android:textColor="@color/white" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>