<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    >
  <data>
    <variable
        name="callback"
        type="ua.napps.scorekeeper.counters.CounterActionCallback"
        />
    <variable
        name="data"
        type="ua.napps.scorekeeper.counters.Counter"
        />
  </data>
  <ua.napps.scorekeeper.counters.CounterView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@{data.backgroundColor}"
      android:foreground="?attr/selectableItemBackgroundBorderless"
      android:longClickable="true"
      android:minHeight="128dp"
      android:minWidth="256dp"
      bind:callback="@{callback}"
      bind:counter="@{data}"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
      <TextView
          android:id="@+id/counter_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="#2E000000"
          android:clickable="false"
          android:ellipsize="none"
          android:gravity="center"
          android:onClick="@{() -> callback.onNameClick(data.id)}"
          android:padding="8dp"
          android:singleLine="true"
          android:text='@{data.name, default="Counter"}'
          android:textAllCaps="true"
          android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
          android:textColor="@{data.textColor}"
          />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:orientation="horizontal"
          android:padding="16dp"
          >

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:alpha="0.38"
            android:scaleType="center"
            app:srcCompat="@drawable/ic_indeterminate_check_box"
            bind:colorTint="@{data.textColor}"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:clickable="false"
            android:gravity="center"
            android:minHeight="48dp"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text='@{String.valueOf(data.value), default="0"}'
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@{data.textColor}"
            />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:alpha="0.38"
            android:scaleType="center"
            app:srcCompat="@drawable/ic_add_box"
            bind:colorTint="@{data.textColor}"
            />
      </LinearLayout>
    </LinearLayout>
  </ua.napps.scorekeeper.counters.CounterView>
</layout>