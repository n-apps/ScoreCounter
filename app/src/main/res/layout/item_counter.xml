<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:minHeight="128dp"
    android:minWidth="256dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/counter_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2E000000"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_counter_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="false"
            android:ellipsize="end"
            android:fontFamily="@font/open_sans_semibold"
            android:gravity="center"
            android:maxLines="1"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left|center_vertical"
            android:alpha="0.38"
            android:scaleType="center"
            tools:src="@drawable/ic_edit" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/counter_interaction_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_counter_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:clickable="false"
            android:fontFamily="@font/squada_one"
            android:gravity="center"
            android:lines="1"
            app:autoSizeMaxTextSize="120sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            tools:text="1"
            tools:textSize="120sp" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="left|center_vertical"
            android:layout_margin="16dp"
            android:alpha="0.38"
            android:scaleType="center"
            app:srcCompat="@drawable/ic_indeterminate_check_box" />


        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="16dp"
            android:alpha="0.38"
            android:scaleType="center"
            app:srcCompat="@drawable/ic_add_box" />
    </FrameLayout>
</LinearLayout>