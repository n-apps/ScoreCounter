<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
  <data>
    <import type="android.graphics.Color"/>
    <variable
        name="counter"
        type="ua.napps.scorekeeper.counters.Counter"
        />
  </data>
  <android.support.design.widget.CoordinatorLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        >
      <android.support.v7.widget.Toolbar
          android:id="@+id/toolbar"
          android:layout_width="match_parent"
          android:layout_height="?attr/actionBarSize"
          app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
          />
    </android.support.design.widget.AppBarLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

      <android.support.design.widget.TextInputLayout
          android:id="@+id/counter_name"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toLeftOf="@id/color"
          app:layout_constraintTop_toTopOf="parent"
          >
        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_counter_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Counter name"
            android:inputType="textCapWords"
            android:maxLength="20"
            android:maxLines="1"
            android:minEms="20"
            android:text="@{counter.name}"
            />
      </android.support.design.widget.TextInputLayout>

      <FrameLayout
          android:id="@+id/color"
          android:layout_width="48dp"
          android:layout_height="48dp"
          android:foreground="?attr/selectableItemBackgroundBorderless"
          android:onClick="onColorPickerClick"
          app:layout_constraintBottom_toBottomOf="@id/counter_name"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="@id/counter_name"
          >
        <com.afollestad.materialdialogs.color.CircleView
            android:id="@+id/color_preview"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:setBackgroundColor="@{Color.parseColor(counter.color)}"
            />
      </FrameLayout>

      <android.support.design.widget.TextInputLayout
          android:id="@+id/counter_value"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          app:layout_constraintLeft_toLeftOf="@id/counter_name"
          app:layout_constraintRight_toLeftOf="@+id/counter_default_value"
          app:layout_constraintTop_toBottomOf="@id/counter_name"
          >
        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_counter_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Counter value"
            android:inputType="number|numberSigned"
            android:maxLines="1"
            android:minEms="3"
            android:text='@{String.valueOf(counter.value), default="1"}'
            />
      </android.support.design.widget.TextInputLayout>

      <android.support.design.widget.TextInputLayout
          android:id="@+id/counter_default_value"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginLeft="16dp"
          app:layout_constraintLeft_toRightOf="@id/counter_value"
          app:layout_constraintRight_toLeftOf="@+id/counter_step"
          app:layout_constraintTop_toTopOf="@id/counter_value"
          >
        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_counter_default_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Counter default value"
            android:inputType="number|numberSigned"
            android:maxLines="1"
            android:minEms="3"
            android:text='@{String.valueOf(counter.defaultValue), default="1"}'
            />
      </android.support.design.widget.TextInputLayout>
      <android.support.design.widget.TextInputLayout
          android:id="@+id/counter_step"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginLeft="16dp"
          app:layout_constraintLeft_toRightOf="@id/counter_default_value"
          app:layout_constraintTop_toBottomOf="@id/counter_name"
          app:layout_constraintRight_toRightOf="@id/counter_name"
          app:layout_constraintTop_toTopOf="@id/counter_default_value"
          >
        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_counter_step"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Counter step"
            android:inputType="number|numberSigned"
            android:maxLines="1"
            android:minEms="3"
            android:text='@{String.valueOf(counter.step), default="1"}'
            />
      </android.support.design.widget.TextInputLayout>

    </android.support.constraint.ConstraintLayout>
  </android.support.design.widget.CoordinatorLayout>
</layout>